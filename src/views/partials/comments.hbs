<!-- Comprueba si hay comentarios -->
{{#if sidebar.comments}}
<div class="card mt-2">
    <div class="card-header bg-dark text-white ">
        <h5><i class="fas fa-comments mr-2"></i>Ãšltimos comentarios</h5>
    </div>
    <div class="card-body">
        <!-- Mostrar comentarios -->
        {{#each sidebar.comments}}
        <div class="row">
            <div class="col">
                <a href="/images/{{image.uniqueId}}">
                    <img src="/public/upload/{{image.filename}}" alt="" class="image-thumbnail w-100 h-100">
                </a>
            </div>
            <div class="col">
                <blockquote class="w-100">
                    <p>{{comment}}</p>
                    <footer class="blockquote-footer">
                        <span>{{name}}</span>
                        <span>{{timeago timestamp}}</span>
                    </footer>
                </blockquote>
            </div>
        </div>
        <br>
        {{/each}}
    </div>
</div>
{{/if}}